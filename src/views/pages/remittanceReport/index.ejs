<main class="content m-2">
    <ul class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="/">Home</a>
        </li>
        <li class="breadcrumb-item">
            <a href="/report/remittanceReport">Remittance Report</a>
        </li>
    </ul>
    <div class="hero-sm bg-white">
        <div class="hero-body">
            <h1 class="text-primary">Remittance Report</h1>
        </div>
    </div>

    <div class="container">
        <div style="display: flex; justify-content: center; align-items: center; flex-direction: column;">
            <div class="input-group col-9">

                <input type="date" id="fromdate" class="form-input">

                <input type="date" id="todate" class="form-input">
                <div class="form-group">
                    <select class="form-select" id="list">
                        `<option value="ALL">All</option>`
                    </select>
                </div>
            </div>
            <div class="input-group col-9 mt-1">

                <button class="btn btn-primary input-group-btn" id="btn-loading" onclick="remittance()">Remittance
                    Report
                </button>
                <button class="btn btn-primary-link input-group-btn" id="btn-csv" onclick="getCSV()">Remittance
                    Report CSV
                </button>
                <button class="btn btn-secondary-link input-group-btn" id="btn-loading-1"
                    onclick="remittancesummary()">Remittance Summary Report
                </button>
                <button class="btn btn-primary input-group-btn disabled" style="margin-left: auto;" id="btn-print"
                    onclick="printArea()">Print
                </button>
            </div>
        </div>
    </div>

    <div class="container">
        <div data-aos="fade-up" class="columns" id="output"></div>
    </div>
    <script src="/JS/lib/CSVExport.js" async></script>
    <script src="/js/funRemittance.js" defer></script>


</main>