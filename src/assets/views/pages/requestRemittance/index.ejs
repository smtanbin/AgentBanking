<main class="content m-2">


    <ul class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="/">Home</a>
        </li>
        <li class="breadcrumb-item">
            <a href="/remittanceProcessing">Remittance</a>
        </li>

    </ul>
    <div data-aos="zoom-out" class="hero-sm">
        <div class="hero-body">
            <h1 class="text-primary">Remittance</h1>
        </div>
    </div>


    <div class="modal" id="modal-id">
        <a href="#close" class="modal-overlay" aria-label="Close"></a>
        <div class="modal-container" id="modal-container">
        </div>
    </div>

    <ul class="tab tab-block my-2 col-6 ">
        <li class="tab-item active" onclick="showRequestPanal()" id="progresslinetab">
            <a>Progress Line</a>
        </li>
        <li class="tab-item" onclick="mkrequest()" id="mkrequesttab">
            <a>Make Request</a>
        </li>
    </ul>


    <div class="container" id="progressline">
        <div class="timeline">
            <div class="timeline-item" id="timeline-example-1">
                <div class="timeline-left">
                    <a class="timeline-icon" href="#timeline-example-1"></a>
                </div>
                <div class="timeline-content">
                    <!-- tiles structure -->
                </div>
            </div>

            <div class="timeline-item" id="timeline-example-2">
                <div class="timeline-left">
                    <a class="timeline-icon icon-lg" href="#timeline-example-2">
                        <i class="icon icon-check"></i>
                    </a>
                </div>
                <div class="timeline-content">
                    <!-- tiles structure -->
                </div>
            </div>
            ...
        </div>
    </div>

    <div class="container d-none card" id="mkrequest">


        <div class="hero hero-sm">
            <div class="hero-body">
                <h1>Remittance Request</h1>

            </div>
        </div>

        <div class="p-centered col-6 my-2">
            <div class="input-group">
                <span class="input-group-addon">Photo ID</span>
                <input type="text" class="form-input" placeholder="Photo Id">
                <button class="btn btn-primary input-group-btn">Search</button>
            </div>
        </div>
        <br />

        <!-- large input group -->
        <div class="column col-9 col-xs-12 ">
            <div class="input-group">
                <span class="input-group-addon">Remittance House</span>
                <select class="form-select">
                    <option>Slack</option>
                    <option>Skype</option>
                    <option>Hipchat</option>
                </select>
                <span class="input-group-addon">Secreat PIN</span>
                <input type="text" class="form-input" placeholder="PIN">
            </div>
            <div class="input-group my-2">
                <span class="input-group-addon">Document No</span>
                <input type="text" class="form-input" placeholder="Document TT no">
            </div>
            <div class="input-group">
                <span class="input-group-addon">Amount</span>
                <input type="number" class="form-input" placeholder="Estimited Enter Amount">
                <span class="input-group-addon">Bouns</span>
                <input type="text" class="form-input disabled">
            </div>

        </div>


        <ul class="tab tab-block mt-2">
            <li class="tab-item active">
                <a href="#">Banificery Information</a>
            </li>
            <li class="tab-item">
                <a href="#">Sender Information</a>
            </li>
        </ul>
        <div class="card-body">
            <div class="column col-9 col-sm-12">
                <form class="form-horizontal" action="#forms">
                    <div class="form-group">
                        <div class="col-3">
                            <label class="form-label" for="input-example-8">Banificery Name</label>
                        </div>
                        <div class="col-9">
                            <input class="form-input" id="input-example-8" type="text" />
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-3">
                            <label class="form-label" for="input-example-8">Father Name</label>
                        </div>
                        <div class="col-9">
                            <input class="form-input" id="input-example-8" type="text" />
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-3">
                            <label class="form-label" for="input-example-8">Mother Name</label>
                        </div>
                        <div class="col-9">
                            <input class="form-input" id="input-example-8" type="text" />
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-3">
                            <label class="form-label" for="input-example-8">Address</label>
                        </div>
                        <div class="col-9">
                            <textarea class="form-input" id="input-example-6" placeholder="Textarea"
                                rows="3"></textarea>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-3">
                            <label class="form-label" for="input-example-8">Identifier</label>
                        </div>
                        <div class="input-group col-9">
                            <span class="input-group-addon bg-gray">Photo ID</span>
                            <input type="text" class="form-input" placeholder="...">
                            <span class="input-group-addon bg-gray">Date of Birth</span>
                            <input type="date" class="form-input" placeholder="...">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-3">
                            <label class="form-label" for="input-example-8">Photo ID Type</label>
                        </div>
                        <div class="input-group col-9">
                            <select class="form-select">
                                <option>Slack</option>
                                <option>Skype</option>
                                <option>Hipchat</option>
                            </select>

                            <span class="input-group-addon bg-gray">Issue Date</span>
                            <input type="date" class="form-input" placeholder="...">
                            <span class="input-group-addon bg-gray">Expaird Date</span>
                            <input type="date" class="form-input" placeholder="...">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-3">
                            <label class="form-label" for="input-example-8">Contact</label>
                        </div>
                        <div class="input-group col-9">

                            <input type="text" class="form-input" placeholder="...">

                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-3">
                            <label class="form-label" for="input-example-8">Account No</label>
                        </div>
                        <div class="input-group col-9">

                            <input type="text" class="form-input" placeholder="...">

                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-3">
                            <label class="form-label" for="input-example-8">Relationship</label>
                        </div>
                        <div class="input-group col-9">
                            <input type="text" class="form-input" placeholder="...">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-3">
                            <label class="form-label" for="input-example-8">Purpose of Remittance</label>
                        </div>
                        <div class="input-group col-9">
                            <input type="text" class="form-input" placeholder="...">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-3">
                            <label class="form-label" for="input-example-8">Photo</label>
                        </div>
                        <div class="input-group col-9">
                            <input type="file" class="form-input" placeholder="...">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-3">
                            <label class="form-label" for="input-example-8">Photo ID Part 1</label>
                        </div>
                        <div class="input-group col-9">
                            <input type="file" class="form-input" placeholder="...">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-3">
                            <label class="form-label" for="input-example-8">Photo ID Part 2</label>
                        </div>
                        <div class="input-group col-9">
                            <input type="file" class="form-input" placeholder="...">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-3">
                            <label class="form-label" for="input-example-8">Additional Doucment</label>
                        </div>
                        <div class="input-group col-9">
                            <input type="file" class="form-input" placeholder="...">

                        </div>
                    </div>

                </form>
            </div>
        </div>
        <div class="card-footer bg-gray">
            <div class="btn-group btn-group-block col-6 p-2">
                <button class="btn btn-primary">Send</button>
                <button class="btn">Update</button>
            </div>
        </div>
    </div>


    <script src="/js/funRemittance.js"></script>


</main>